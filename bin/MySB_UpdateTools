##################### FIRST LINE #####################################

#### PlexMedia & Tautulli update
if [ ${gbIsInstalled_PlexMedia} == "YES" ]; then
    log_daemon_msg "${UpdateTools_Plex}"
    gfnScriptInvoke 'ScreenSTD' "${MySB_InstallDir}/install/PlexMedia" 'CRON'
    gfnStatusLSB
fi

#### Docker tools
# if gfnCheckCommand 0 docker; then
# log_daemon_msg "${UpdateTools_DockerTools}"
# gfnScriptInvoke 'ScreenSTD' "${MySB_InstallDir}/install/Docker" 'CRON'
# gfnStatusLSB
# fi

#### Webmin update
# if [ "${gbIsInstalled_Webmin}" == "YES" ]; then
# log_daemon_msg "${UpdateTools_Webmin}"
# gfnScriptInvoke 'ScreenSTD' "${MySB_InstallDir}/install/Webmin" 'CRON'
# gfnStatusLSB
# fi

#### CPAN modules
# if [ ! -f /tmp/CPAN.lock ]; then
# cpan -u
# rm -f /tmp/CPAN.lock
# fi

#### Correcting minor bugs
## Postfix Aliases
gfnListCountUsers 'all'
for seedUser in ${gsUsersList}; do
    sUserMail="$(cmdMySQL 'MySB_db' "SELECT users_email FROM users_history WHERE users_ident='$seedUser';")"
    (! grep -q "$seedUser" /etc/aliases) && {
        echo "$seedUser: $sUserMail" >>/etc/aliases
        newaliases
    }
done
## ruTorrent Plugin Check Port
gfnListCountUsers 'normal'
for seedUser in ${gsUsersList}; do
    if (! grep -q 'portchecker.co' "${gsRutorrentPluginsDir}"/check_port/action.php); then
        cp -v "${MySB_InstallDir}"/templates/rutorrent/plugins.check_port.action.php "${gsRutorrentPluginsDir}"/check_port/action.php
        gfnManageServices restart "rtorrent-$seedUser"
    fi
done
## #54 Remove /home mounts for NFSv4
for mount_dir in $(mount -l | grep '/export' | awk '{ print $3 }'); do
    umount "${mount_dir}"
done
(grep -q '/export' /etc/fstab) && {
    sed -i '/\/export/d' /etc/fstab
    mount -a
}
## #59
(! grep -q 'ethtool' /etc/rc.local) && {
    install -v -o root -g root -m 0755 "${MySB_InstallDir}"/templates/tweaks/etc.rc.local.tmpl /etc/rc.local
    perl -pi -e "s/<MySB_Version>/$gsCurrentVersion/g" /etc/rc.local
}
## Replace certbot-auto script by certbot Debian package
if (! which certbot >/dev/null); then
    # shellcheck source=/dev/null
    source "${MySB_InstallDir}"/inc/funcs_by_script/funcs_Install
    gfnPackagesManage install 'backports' "certbot"
fi

# Stunnel4 conf review
(! grep -q 'OCSPaia' /etc/stunnel/stunnel.conf) && {
    gfnManageServices stop "stunnel4 postfix"
    SmtpValues="$(cmdMySQL 'MySB_db' "SELECT smtp_provider,smtp_host,smtp_port FROM smtp WHERE id_smtp='1';" | sed 's/\t/|/g;')"
    SMTP_Provider="$(echo ${SmtpValues} | awk '{split($0,a,"|"); print a[1]}')"
    SMTP_Host="$(echo ${SmtpValues} | awk '{split($0,a,"|"); print a[2]}')"
    SMTP_Port="$(echo ${SmtpValues} | awk '{split($0,a,"|"); print a[3]}')"
    if [ "${SMTP_Provider}" != "LOCAL" ]; then
        install -v -g root -o root -m 0600 ${MySB_InstallDir}/templates/postfix/stunnel.conf.tmpl /etc/stunnel/stunnel.conf
        perl -pi -e "s/<InstallDir>/${gsInstallDirEscaped}/g" /etc/stunnel/stunnel.conf
        perl -pi -e "s/<smtp_host>/${SMTP_Host}/g" /etc/stunnel/stunnel.conf
        perl -pi -e "s/<smtp_port>/${SMTP_Port}/g" /etc/stunnel/stunnel.conf
        if [[ -f /etc/letsencrypt/live/${gsHostNameFqdn}/cert.pem ]] && [[ -f /etc/letsencrypt/live/${gsHostNameFqdn}/privkey.pem ]]; then
            nNumLine=$(cat /etc/stunnel/stunnel.conf | grep 'cert =' -n -m 1 | cut -d ':' -f 1)
            sed -i '/cert =/d' /etc/stunnel/stunnel.conf
            sed -i '/key =/d' /etc/stunnel/stunnel.conf
            sed -i "${nNumLine}i\key = /etc/letsencrypt/live/${gsHostNameFqdn}/privkey.pem" /etc/stunnel/stunnel.conf
            sed -i "${nNumLine}i\cert = /etc/letsencrypt/live/${gsHostNameFqdn}/cert.pem" /etc/stunnel/stunnel.conf
        fi
    fi
    gfnManageServices stop "stunnel4"
    gfnManageServices start "stunnel4 postfix"
}

# -----------------------------------------
. $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################
